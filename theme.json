{
    "version": 1,
    "settings": {
        "layout": {
            "contentSize": "35rem",
            "wideSize": "70rem"
        },
        "custom": {
            "scale": {
                "1": "0.75rem",
                "2": "0.875rem",
                "3": "1rem",
                "4": "1.125rem",
                "5": "1.25rem",
                "6": "1.5rem",
                "7": "1.875rem",
                "8": "2.25rem",
                "9": "3rem",
                "10": "3.75rem",
                "11": "4.5rem",
                "12": "6rem"
            },
            "colors": {
                "black": "#222222",
                "white": "#ffffff"
            },
            "spacing": {
                "sm": "var(--wp--custom--scale--1)",
                "baseline": "var(--wp--custom--scale--6)",
                "lg": "var(--wp--custom--scale--9)"
            }
        },
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "name": "Primary Color",
                    "color": "var(--wp--custom--colors--black)"
                },
                {
                    "slug": "background",
                    "name": "Background Color",
                    "color": "var(--wp--custom--colors--white)"
                }
            ]
        },
        "typography": {
            "fontSizes": [
                {
                    "slug": "tiny",
                    "name": "Tiny",
                    "size": "var(--wp--custom--scale--1)"
                },
                {
                    "slug": "small",
                    "name": "Small",
                    "size": "var(--wp--custom--scale--2)"
                },
                {
                    "slug": "normal",
                    "name": "normal",
                    "size": "var(--wp--custom--scale--5)"
                },
                {
                    "slug": "large",
                    "name": "Large",
                    "size": "var(--wp--custom--scale--6)"
                },
                {
                    "slug": "extra-large",
                    "name": "Extra Large",
                    "size": "var(--wp--custom--scale--9)"
                },
                {
                    "slug": "gigantic",
                    "name": "Gigantic",
                    "size": "var(--wp--custom--scale--11)"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--custom--colors--white)",
            "text": "var(--wp--custom--colors--black)"
        },
        "typography": {
            "fontSize": "1.25rem",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--custom--colors--red)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--extra-large)",
                    "lineHeight": "1"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--normal)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--tiny)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--tiny)"
                }
            }
        },
        "blocks": {}
    }
}
